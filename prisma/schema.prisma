generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  image         String?
  hourFeed      String
  email         String?   @unique
  createdAt     DateTime  @default(now())
  updateAt      DateTime  @updatedAt

  @@map("user")
}

model Device {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String
  email       String
  hourFeed    String[] 
  doorTime    String   
  image       String
  amountFood  String
  createdAt   DateTime @default(now())
  updateAt    DateTime @updatedAt
}
